<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.jahhan</groupId>
		<artifactId>package-dubbo</artifactId>
		<version>1.0.0-RELEASE</version>
	</parent>
	<artifactId>package-dubbo-base</artifactId>
	<packaging>jar</packaging>
	<name>${project.artifactId}</name>
	<description>The all in one project of common</description>
	<properties>
		<build.skip_maven_deploy>false</build.skip_maven_deploy>
	</properties>
	<dependencies>
		<dependency>
			<groupId>net.jahhan</groupId>
			<artifactId>package-base</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>net.jahhan</groupId>
			<artifactId>package-service</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>net.jahhan</groupId>
			<artifactId>supported-dubbo-base</artifactId>
			<version>${project.parent.version}</version>
		</dependency>

		<dependency>
			<groupId>net.jahhan</groupId>
			<artifactId>spring-guice</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-javadoc</id>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<doclint>none</doclint>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<includeDependencySources>true</includeDependencySources>
					<dependencySourceIncludes>
						<dependencySourceInclude>net.jahhan:common-plugin-util</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:jdbc-*</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:cache-*</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:apidoc-*</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:logappend-*</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:register-*</dependencySourceInclude>
						
						<dependencySourceInclude>net.jahhan:package-base</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:dubbo-package</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:supported-dubbo-base</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:spring-guice</dependencySourceInclude>
						<dependencySourceInclude>net.jahhan:package-service</dependencySourceInclude>
						
						<dependencySourceExclude>net.jahhan:dubbo-*</dependencySourceExclude>
					</dependencySourceIncludes>
					<show>public</show>
					<charset>${build.file_encoding}</charset>
					<encoding>${build.file_encoding}</encoding>
					<docencoding>${build.file_encoding}</docencoding>
					<links>
						<link>http://docs.oracle.com/javase/7/docs/api</link>
					</links>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>package</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<createSourcesJar>true</createSourcesJar>
							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
							<artifactSet>
								<includes>
									<include>net.jahhan:package-base</include>
									<include>net.jahhan:dubbo-package</include>
									<include>net.jahhan:supported-dubbo-base</include>

									<include>net.jahhan:spring-guice</include>

									<include>net.jahhan:package-service</include>
									<include>net.jahhan:common-plugin-util</include>
									<include>net.jahhan:jdbc-api</include>
									<include>net.jahhan:jdbc-druid</include>
									<include>net.jahhan:jdbc-c3p0</include>
									<include>net.jahhan:cache-api</include>
									<include>net.jahhan:cache-redis-sentinel</include>
									<include>net.jahhan:cache-ehcache</include>
									<include>net.jahhan:apidoc-swagger</include>
									<include>net.jahhan:logappend-logback</include>
									<include>net.jahhan:register-api</include>
									<include>net.jahhan:register-zookeeper</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>