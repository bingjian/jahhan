<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>net.jahhan</groupId>
		<artifactId>package-frameworkx</artifactId>
		<version>2.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>package-frameworkx-common</artifactId>
    <packaging>jar</packaging>
    <name>${project.artifactId}</name>
    <description>The all in one project of common</description>
    <properties>
        <build.skip_maven_deploy>false</build.skip_maven_deploy>
    </properties>
    <dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>package-common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>frameworkx-package</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>supported-frameworkx-base</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>intf-authentication-center</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>sdk-authentication-center</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>supported-frameworkx-authentication-center</artifactId>
			<version>${project.version}</version>
		</dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createSourcesJar>true</createSourcesJar>
                            <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
                            <artifactSet>
                                <includes>
                                    <include>${project.groupId}:package-common</include>
                                    <include>${project.groupId}:frameworkx-package</include>
                                    <include>${project.groupId}:intf-authentication-center</include>
                                    <include>${project.groupId}:supported-frameworkx-authentication-center</include>
                                    <include>${project.groupId}:supported-frameworkx-base</include>
                                    
                                    <include>${project.groupId}:package-service</include>
									<include>${project.groupId}:package-base</include>
									<include>${project.groupId}:common-extension</include>
                                    <include>${project.groupId}:jdbc-api</include>
                                    <include>${project.groupId}:jdbc-druid</include>
                                    <include>${project.groupId}:jdbc-c3p0</include>
                                    <include>${project.groupId}:cache-api</include>
                                    <include>${project.groupId}:cache-redis-sentinel</include>
                                    <include>${project.groupId}:cache-ehcache</include>
                                    <include>${project.groupId}:apidoc-swagger</include>
                                    <include>${project.groupId}:logappend-logback</include>
                                    <include>${project.groupId}:register-api</include>
                                    <include>${project.groupId}:register-zookeeper</include>
                                    
                                    <include>${project.groupId}:hessian-lite</include>
									<include>${project.groupId}:dubbo-common</include>
									<include>${project.groupId}:dubbo-remoting-api</include>
									<include>${project.groupId}:dubbo-remoting-netty</include>
									<include>${project.groupId}:dubbo-remoting-mina</include>
									<include>${project.groupId}:dubbo-remoting-grizzly</include>
									<include>${project.groupId}:dubbo-remoting-p2p</include>
									<include>${project.groupId}:dubbo-remoting-http</include>
									<include>${project.groupId}:dubbo-remoting-zookeeper</include>
									<include>${project.groupId}:dubbo-rpc-api</include>
									<include>${project.groupId}:dubbo-rpc-default</include>
									<include>${project.groupId}:dubbo-rpc-injvm</include>
									<include>${project.groupId}:dubbo-rpc-rmi</include>
									<include>${project.groupId}:dubbo-rpc-hessian</include>
									<include>${project.groupId}:dubbo-rpc-http</include>
									<include>${project.groupId}:dubbo-rpc-webservice</include>
									<include>${project.groupId}:dubbo-rpc-memcached</include>
									<include>${project.groupId}:dubbo-rpc-redis</include>
									<include>${project.groupId}:dubbo-rpc-rest</include>
									<include>${project.groupId}:dubbo-filter-validation</include>
									<include>${project.groupId}:dubbo-filter-cache</include>
									<include>${project.groupId}:dubbo-cluster</include>
									<include>${project.groupId}:dubbo-registry-api</include>
									<include>${project.groupId}:dubbo-registry-default</include>
									<include>${project.groupId}:dubbo-registry-multicast</include>
									<include>${project.groupId}:dubbo-registry-zookeeper</include>
									<include>${project.groupId}:dubbo-registry-redis</include>
									<include>${project.groupId}:dubbo-monitor-api</include>
									<include>${project.groupId}:dubbo-monitor-default</include>
									<include>${project.groupId}:dubbo-config-api</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>